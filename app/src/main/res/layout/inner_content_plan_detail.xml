<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_row="2"
    android:paddingBottom="16dp"
    android:background="@color/gray_day_background_bar"
    android:paddingLeft="@dimen/keyline_content_start"
    android:paddingRight="@dimen/keyline_margin"
    android:paddingTop="8dp"
    android:minHeight="65dp">

    <!-- Session title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.1"
        android:maxLines="1"
        android:textStyle="bold"
        android:text="Codigo: 205101"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/text_size_minimum" />

    <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="MATEMATICAS ESPECIALES"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_large"
        android:layout_gravity="left|bottom" />


    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="10/500"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_large"
        android:layout_gravity="right|bottom" />

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.1"
        android:maxLines="1"
        android:text="Calificacion"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/text_size_minimum"
        android:layout_gravity="right|top" />

</FrameLayout>